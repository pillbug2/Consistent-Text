<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<!-- potter's wheel -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="DV_ClayTurningTable"]/label</xpath>
		<value>
			<label>potters wheel</label>
		</value>
	</Operation>

	<!-- clay-turning table -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="DV_IndustrialClayTurningTable"]/label</xpath>
		<value>
			<label>electric potters wheel</label>
		</value>
	</Operation>
	
	<!-- pots -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="DV_Pots"]/label</xpath>
		<value>
			<label>clay pots</label>
		</value>
	</Operation>

	<!-- big pot -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="DV_BigPot"]/label</xpath>
		<value>
			<label>large clay pot</label>
		</value>
	</Operation>
	
</Patch>
