		<success>Always</success>
		<xpath>Defs/ThingDef[defName="AdvShip_GravReactor"]/label</xpath>
		<value>
			<label>singularity reactor</label>
		</value>
	</Operation>

	<!-- Original: advanced gravship computer core -->
	<!-- Shorter, like vanilla flight computer -->
