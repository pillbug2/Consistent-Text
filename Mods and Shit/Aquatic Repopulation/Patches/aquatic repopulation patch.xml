<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Original: aquafauna regulator -->
	<!-- Shorter, more functional name -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="AquafaunaRegulator"]/label</xpath>
		<value>
			<label>aquatic hatchery</label>
		</value>
	</Operation>

	<!--
	Original:
	An ultratech device that enhances the natural procreation of fish by stabilizing nutrient and mineral levels in the body of water it is built next to.\n\nOnly one device can be built for each body of water, as to not disrupt the balance.
	-->
	<!-- Slightly increased clarity -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="AquafaunaRegulator"]/description</xpath>
		<value>
			<description>An ultratech device that enhances the natural procreation of fish by stabilizing nutrient and mineral levels in the body of water it is built next to.\n\nOnly one device can be built for each body of water, as to not disrupt the habitat's balance.</description>
		</value>
	</Operation>

</Patch>
