<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Original: pollution fastpump -->
	<!-- Style edit -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="VRecyclingE_PollutionFastPump"]/label</xpath>
		<value>
			<label>fast pollution pump</label>
		</value>
	</Operation>

	<!-- Original: waste crate -->
	<!-- More functional name. Used Waste Isolation Pilot Plant as inspiration. -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="VRecyclingE_WasteCrate"]/label</xpath>
		<value>
			<label>waste isolation crate</label>
		</value>
	</Operation>

	<!-- Original: electric-powered recycling bench -->
	<!-- Vanilla rename -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="VRecyclingE_ElectricRecyclingWorkbench"]/label</xpath>
		<value>
			<label>electric recycling bench</label>
		</value>
	</Operation>

	<!-- Original: garbage compactor -->
	<!-- Rename in line with description and common name -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="VRecyclingE_GarbageCompactor"]/label</xpath>
		<value>
			<label>trash compactor</label>
		</value>
	</Operation>

</Patch>
