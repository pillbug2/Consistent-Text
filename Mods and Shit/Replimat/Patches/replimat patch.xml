<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Original: Replimat Terminal -->
	<!-- Capitalization -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="ReplimatTerminal"]/label</xpath>
		<value>
			<label>replimat terminal</label>
		</value>
	</Operation>

	<!-- Original: Replimat Wall Terminal -->
	<!-- Capitalization -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="ReplimatTerminalWall"]/label</xpath>
		<value>
			<label>replimat wall terminal</label>
		</value>
	</Operation>

	<!-- Original: Replimat Animal Feeder -->
	<!-- Capitalization -->
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
